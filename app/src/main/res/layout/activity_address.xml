<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Title Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginStart="110dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:gravity="center" />
    </LinearLayout>

    <!-- CardView containing address information -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- TextView for displaying the address -->
            <TextView
                android:id="@+id/address_line1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="160dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@android:color/black"
                android:textSize="21sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add a new address section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:padding="2dp"
            android:text="Add a new address"
            android:textColor="@android:color/black"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/tambah"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:src="@drawable/tambah" />

    </LinearLayout>

    <!-- Map image -->
    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/map" />

    <!-- No address found text -->
    <TextView
        android:id="@+id/noAddressFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="no address found"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:padding="8dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/nextButton"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFA500"
            android:text="Next"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>


